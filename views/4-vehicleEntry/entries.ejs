<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap-5.1.3-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/fontawesome-free-6.1.1-web/css/all.min.css">
    <title>Dashboard</title>
    <%- include('./partials/style.ejs'); %>
        <%- include('../a-global/style.ejs'); %>
</head>

<body>
    <%- include('../a-global/header'); %>
        <div class="main">
            <%- include('../a-global/sidebar'); %>

                <div class="right" style="color: white;">
                    <div class="nav">
                        <i class="fa-solid fa-house-user"></i>&nbsp; / &nbsp;<span>Vehicle entry</span>
                    </div>

                    <div class="form">
                        <div class="header">
                            <h3><i class="fa-solid fa-car-on"></i> Vehicle Entry</h3>
                        </div>
                        <form method="POST" action="/vehicle-entry" id="submitForm">
                            <div class="form-group">
                                <label>Registration Number</label>
                                <input type="text" class="form-control" placeholder="Ex. T666 DAD" id="regno" name="regno"
                                    required>
                            </div>

                            <div class="form-group">
                                <label>Vehicle's Company Name</label>
                                <input type="text" class="form-control" placeholder="Ex. Toyota" id="vname" name="vname"
                                    required>
                            </div>

                            <div class="form-group">
                                <label>Vehicle Category</label>
                                <select class="form-select" name="cname" id="cname" required>
                                    <option value="" selected disabled hidden
                                    >Select Category</option>
                                    <% categories.forEach(cat=> { %>
                                        <option value="<%= cat.cname %> - <%= cat.price %>">
                                            <%= cat.cname %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Owner's Full Name</label>
                                <input type="text" class="form-control" placeholder="Enter Here.." id="oname"
                                    name="oname" required>
                            </div>

                            <div class="form-group">
                                <label>Owner's Contact</label>
                                <input type="tel" class="form-control" placeholder="Enter Here.." maxlength="10"
                                    pattern="[0-9]+" id="contact" name="contact" required>
                            </div>

                            <div class="fbtns">
                                <button type="submit" class="btn sbtn" name="submit-vehicle">Submit</button>

                                <button type="reset" class="btn rbtn">Reset</button>
                            </div>
                        </form>
                    </div>

                    <br><br>
                <%- include('../a-global/footer.ejs'); %>
                </div>
        </div>

        <!-- modal -->
        <%- include('./partials/modal.ejs'); %> 



        <%- include('./partials/script'); %>
            <%- include('../a-global/script'); %>
                <script type="text/javascript" src="/bootstrap-5.1.3-dist/js/bootstrap.min.js"></script>
</body>

</html>