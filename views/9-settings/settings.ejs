<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap-5.1.3-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/fontawesome-free-6.1.1-web/css/all.min.css">
    <title>Out Vehicles</title>
    <%- include('./partials/style.ejs'); %>
        <%- include('../a-global/style.ejs'); %>
</head>

<body>
    <%- include('../a-global/header'); %>
        <div class="main">
            <%- include('../a-global/sidebar'); %>

                <div class="right" style="color: white;">
                    <div class="nav">
                        <i class="fa-solid fa-house-user"></i>&nbsp; / &nbsp;<span>Settings</span>
                    </div>
                    <div class="bsec">
                        <div class="title">
                            Settings
                        </div>
                        <div class="body">
                            <div class="g1 gp">
                                <div class="i1 inpt">
                                    <label for="fname">Company Name</label>
                                    <input type="text" id="coname" name="coname" value="<%= info.coname %>">
                                </div>
                                <div class="i2 inpt">
                                    <label for="uname">Company Email</label>
                                    <input type="email" id="coemail" name="coemail" value="<%= info.coemail %>">
                                </div>
                            </div>
                            <div class="g2 gp">
                                <div class="i1 inpt">
                                    <label for="website">Website</label>
                                    <input type="url" id="website" name="website" value="<%= info.website %>">
                                </div>
                                <div class="i2 inpt">
                                    <label for="address">Address</label>
                                    <input type="text" id="address" name="address" value="<%= info.address %>">
                                </div>
                            </div>
                            <div class="g3 gp">
                                <div class="i1 inpt">
                                    <label for="website">Monthly Target <span id="mts"></span></label>
                                    <input type="number" id="mtarget" name="mtarget" value="<%= info.mtarget %>">
                                </div>
                                <div class="i2 inpt">
                                    <label for="address">Daily Target <span id="dts"></span></label>
                                    <input type="number" id="dtarget" name="dtarget" value="<%= info.dtarget %>">
                                </div>
                            </div>
                            <div class="btn">
                                <button id="mchange">Make Changes</button>
                            </div>
                        </div>
                    </div>

                    <%- include('../a-global/footer.ejs'); %>
                </div>
        </div>
         <!-- modal -->
         <%- include('./partials/modal.ejs'); %>



        <%- include('./partials/script'); %>
            <%- include('../a-global/script'); %>
                <script type="text/javascript" src="/bootstrap-5.1.3-dist/js/bootstrap.min.js"></script>
</body>

</html>