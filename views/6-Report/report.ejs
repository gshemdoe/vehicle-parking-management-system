<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap-5.1.3-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/fontawesome-free-6.1.1-web/css/all.min.css">
    <title>Out Vehicles</title>
    <%- include('./partials/style.ejs'); %>
        <%- include('../a-global/style.ejs'); %>
</head>

<body>
    <%- include('../a-global/header'); %>
        <div class="main">
            <%- include('../a-global/sidebar'); %>

                <div class="right" style="color: white;">
                    <div class="nav">
                        <i class="fa-solid fa-house-user"></i>&nbsp; / &nbsp;<span>Reports</span>
                    </div>
                    <div class="incoming">
                        <section class="dateWrapper">
                            <div class="dateInput">
                                <div class="from">
                                    <h3>From</h3>
                                    <input type="date" name="fromDate" id="fromDate">
                                </div>
                                <div class="to">
                                    <h3>To</h3>
                                    <input type="date" name="toDate" id="toDate">
                                </div>
                            </div>

                            <div class="genBtn">
                                <button onclick="generate()">
                                    <i class="fa-solid fa-clock-rotate-left"></i>
                                    Generate
                                </button>
                            </div>
                        </section>

                        <section class="search">
                            <div class="idadi">
                                <span>Show</span>
                                <select name="idadi" id="select-idadi">
                                    <option value="ten">10</option>
                                    <option value="fifteen">15</option>
                                    <option value="t25">25</option>
                                    <option value="fifty">50 ></option>
                                </select>
                                <span>entries</span>
                            </div>
                            <div class="searchInpt">
                                <span>Search: &nbsp;</span>
                                <input type="text" id="sInput" placeholder="search category" oninput="searchVehicle()">
                            </div>
                        </section>
                        <section class="tableCont">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Vehicle Number</th>
                                        <th scope="col">Category</th>
                                        <th scope="col">Vehicle's Owner</th>
                                        <th scope="col">Charged</th>
                                    </tr>
                                </thead>
                                <tbody id="tbody">
                                   
                                </tbody>
                            </table>
                            <div class="nothing" id="nothing">
                                Ooops! Nothing found for the selected period of time... ðŸ˜­
                            </div>
                            <div class="d-flex justify-content-center" id="spinner" style="display: none !important;">
                                <br><br><br>
                                <div class="spinner-border" role="status">
                                  <span class="visually-hidden">Loading...</span>
                                </div>
                              </div>
                        </section>

                        <section class="nextprev">
                            <div class="showing">
                                Showing 1 to n/n of <total> entries
                            </div>
                            <div class="pn">
                                <button disabled>Prev</button>
                                <span>1</span>
                                <button disabled>Next</button>
                            </div>
                        </section>
                    </div>
                </div>
        </div>





        <%- include('./partials/script'); %>
            <%- include('../a-global/script'); %>
                <script type="text/javascript" src="/bootstrap-5.1.3-dist/js/bootstrap.min.js"></script>
</body>

</html>