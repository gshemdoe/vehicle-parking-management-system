<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap-5.1.3-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/fontawesome-free-6.1.1-web/css/all.min.css">
    <title>Out Vehicles</title>
    <%- include('./partials/style.ejs'); %>
        <%- include('../a-global/style.ejs'); %>
</head>

<body>
    <%- include('../a-global/header'); %>
        <div class="main">
            <%- include('../a-global/sidebar'); %>

                <div class="right" style="color: white;">
                    <div class="nav">
                        <i class="fa-solid fa-house-user"></i>&nbsp; / &nbsp;<span>Out vehicles</span>
                    </div>
                    <div class="incoming">
                        <section class="title">
                            <h3>
                                Out Vehicles
                            </h3>
                        </section>
                        <section class="search">
                           <div class="idadi">
                               <span>Show</span>
                               <select name="idadi" id="select-idadi">
                                   <option value="ten">10</option>
                                   <option value="fifteen">15</option>
                                   <option value="t25">25</option>
                                   <option value="fifty">50 ></option>
                               </select>
                               <span>entries</span>
                           </div>
                           <div class="searchInpt">
                               <span>Search: &nbsp;</span>
                               <input type="text" id="sInput" placeholder="search category" oninput="searchVehicle()">
                           </div>
                        </section>
                        <section class="tableCont">
                            <table class="table table-striped table-bordered">
                            <thead>
                              <tr>
                                <th scope="col">#</th>
                                <th scope="col">Vehicle Number</th>
                                <th scope="col">Category</th>
                                <th scope="col">Vehicle's Owner</th>
                                <th scope="col">Entered On</th>
                                <th scope="col">Left On</th>
                                <th scope="col">Charged</th>
                                <th scope="col">Action</th>
                              </tr>
                            </thead>
                            <tbody>
                                <% outvehicles.forEach((v, index) => { %>
                                    <tr class="inVrow">
                                        <th scope="row"><%= index + 1 %> </th>
                                        <td><%= v.regno %> </td>
                                        <td><%= v.cname %> </td>
                                        <td><%= v.oname %> </td>
                                        <td><%= v.inCreated.toLocaleString() %> </td>
                                        <td><%= v.createdAt.toLocaleString() %> </td>
                                        <td>Tsh. <%= v.pesa.toLocaleString('en-us') %>/= </td>
                                        <td>
                                            <button type="button" onclick="outVehicle('<%= v.id %>', '<%= v.regno %>', '<%= v.vname %>', '<%= v.cname %>', '<%= v.pnum %>', '<%= v.oname %>', '<%= v.inCreated %>', '<%= v.createdAt %>', '<%= v.contact %>', '<%= v.pesa %>', '<%= v.remark %>')">
                                             <i class="fa-solid fa-circle-info"></i> Details
                                            </button>
                                        </td>
                                      </tr>
                                <% }) %>
                            </tbody>
                        </table>
                        </section>
                        
                        <section class="nextprev">
                            <div class="showing">
                                Showing 1 to <%= outvehicles.length %>  of <%= outvehicles.length %>  entries
                            </div>
                            <div class="pn">
                                <button disabled>Prev</button>
                                <span>1</span>
                                <button disabled>Next</button>
                            </div>
                        </section>
                    </div>
                </div>
        </div>

        <!-- modal -->
        <%- include('./partials/modal'); %> 

        
  
  

        <%- include('./partials/script'); %>
        <%- include('../a-global/script'); %>
        <script type="text/javascript" src="/bootstrap-5.1.3-dist/js/bootstrap.min.js"></script>
</body>

</html>