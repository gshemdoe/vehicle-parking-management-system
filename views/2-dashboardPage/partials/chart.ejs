<script>
    const pieOptions = {
        plugins: {
            legend: {
            display: true,
            labels: {
                font: {
                    size: 14
                }
            }
        }
        },
    }

    function chart1() {
        const data = {
            labels: [
                'In Vehicles',
                'Out Vehicles'
            ],
            datasets: [{
                label: 'IN | OUT Highlights',
                data: [
                    Number('<%= entries.length %>'),
                    Number('<%= outs.length %>')
                ],
                backgroundColor: [
                    'green',
                    'brown',
                ],
                hoverOffset: 4,
                borderJoinStyle: 'round',
                hoverBorderWidth: '3',
                hoverBorderColor: 'gray'
            }]
        };

        const config = {
            type: 'pie',
            data: data,
            options: pieOptions
        };

        const myChart = new Chart(document.getElementById('myChart'), config);
    }
    chart1()

    function chart2() {
        const data = {
            labels: [
                'This Week',
                'Last Week'
            ],
            datasets: [{
                label: 'This Week - Last Week Ratio',
                data: [
                    Number('<%= parkedThisWeek.length %>'),
                    Number('<%= parkedLastWeek.length %>')
                ],
                backgroundColor: [
                    '#2a3542',
                    'brown'
                ],
                hoverOffset: 4,
                borderJoinStyle: 'round',
                hoverBorderWidth: '3',
                hoverBorderColor: 'gray'
            }]
        };

        const config = {
            type: 'doughnut',
            data: data,
            options: pieOptions
        };

        const myChart = new Chart(document.getElementById('myChart2'), config);
    }
    chart2()

</script>