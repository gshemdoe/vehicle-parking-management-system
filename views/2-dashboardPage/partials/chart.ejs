<script>
    const pieOptions = {
        plugins: {
            legend: {
            display: true,
            labels: {
                font: {
                    size: 14
                }
            }
        }
        },
    }

    function chart1() {
        const data = {
            labels: [
                'In Vehicles',
                'Out Vehicles'
            ],
            datasets: [{
                label: 'IN | OUT Highlights',
                data: [
                    Number('<%= entries.length %>'),
                    5
                ],
                backgroundColor: [
                    'green',
                    'brown',
                ],
                hoverOffset: 4,
                borderJoinStyle: 'round',
                hoverBorderWidth: '3',
                hoverBorderColor: 'gray'
            }]
        };

        const config = {
            type: 'pie',
            data: data,
            options: pieOptions
        };

        const myChart = new Chart(document.getElementById('myChart'), config);
    }
    chart1()

